# At pole
Host omega0 omega0.usap.gov
    ProxyCommand ssh spud -W %h:%p
    User ghall

Host bicep3*
    ProxyCommand ssh omega0 -W %h:%p
    User bicep

Host keck3*
    ProxyCommand ssh omega0 -W %h:%p
    User keck

# Harvard
Host cfa login.cfa.harvard.edu
    Host Name login.cfa.harvard.edu
    ControlMaster auto
    ControlPath ~/.ssh/controlmasters/%r@%h:%p
    User ghall

Host cfa0 cfa0.cfa.harvard.edu
    HostName cfa0.cfa.harvard.edu
    ProxyCommand ssh login.cfa.harvard.edu -W %h:%p
    User ghall

Host mars mars.cfa.harvard.edu
    HostName mars.cfa.harvard.edu
    ProxyCommand ssh login.cfa.harvard.edu -W %h:%p
    User ghall

Host garlick garlick.cfa.harvard.edu
    HostName garlick.cfa.harvard.edu
    ProxyCommand ssh login.cfa.harvard.edu -W %h:%p
    User ghall

Host bicep5*
    ProxyCommand ssh login.cfa.harvard.edu -W %h:%p
    HostName %h.cfa.harvard.edu
    ForwardX11 yes
    User ghall


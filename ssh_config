# Rescomp Hosts

Host irc irc.housing.berkeley.edu
    Hostname irc.housing.berkeley.edu
    DynamicForward 9001

Host hal
    Hostname hal.rescomp.berkeley.edu

Host stargate
    Hostname stargate.housing.berkeley.edu
    ForwardAgent yes
    ControlPath ~/.ssh/controlmasters/%r@%h:%p
    ControlMaster auto

# Bastion rescomp hosts
Host dev-* architect pythondev
    ProxyCommand ssh stargate.housing.berkeley.edu nc %h %p
    ForwardAgent yes
    DynamicForward 9001


Host resgit
    Hostname git.rescomp.berkeley.edu
    User gitolite3
    IdentityFile ~/.ssh/id_rsa


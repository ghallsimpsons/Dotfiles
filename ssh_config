    HostName bicep0.caltech.edu
    User bicep

Host badaq1 badaq1.spa.umn.edu
    HostName badaq1.spa.umn.edu

Host badaq
    User badaq
    ProxyJump omega1

Match Host badaq.spa.umn.edu exec "test $(eval ps -ho cmd $PPID | awk '{print $1}') = ssh"
    RequestTTY yes
    RemoteCommand HOME=/home/ghall tmux new-session -A -s grant

Host bamce*
    User badaq
    ForwardX11 yes
    ProxyJump omega1

Host bahk
    User bicep
    ForwardX11 yes
    ProxyJump omega1


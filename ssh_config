Host odyssey holybicep01
    HostName holybicep01
    ProxyJump spud_int
    ForwardX11 yes

Host spud_int
    # First proxy to spud, then bind to localhost:9999
    ProxyJump spud
    HostName localhost
    Port 9999

# Run on spud
Host odyssey_login holylogin.rc.fas.harvard.edu
    HostName holylogin.rc.fas.harvard.edu
    LocalForward localhost:9999 holybicep01:22

